<!DOCTYPE html>
<html>

<%- include('partials/head') %>

    <body>

        <%- include('partials/header') %>


            
      <section>
        <img src="/images/img-home-banner.jpg" width=100% alt="Banner de ofertas">
    </section>


            <main class="main-del-edit">
                <h1>Edici√≥n de Producto</h1>
                <section class="ultima-visita">

                    <form class="fomr-del-edit" action="/products/<%=  product.id %>?_method=PUT" method="POST">

                        <div class="field">
                            <label for="name">Nombre</label>
                            <div class="control">

                                <input type="text" name="name" value="<%= locals.camposDevueltos ? camposDevueltos.name  : product.name %>">

                                <% if(locals.errors && errors.name){ %>
                                    <div><%= errors.name.msg %></div>
                                <% } %>

                            </div>
                           

                           
                            

                        </div>


                        <div class="field">
                            <label for="image">Imagen</label>
                            <div class="control">
                                <input type="file" name="image" value="<%= product.image %>" class="product_img">
                                <input type="hidden" name="oldImage" value="<%= product.image %>">
                            </div>
                        </div>

                        <div class="field">
                            <label for="price">Precio</label>
                            <div class="control">
                                <input type="text" name="price" value="<%= product.price %>">
                            </div>
                        </div>

                        <div class="field">
                            <label for="discount">descuento</label>
                            <div class="control">

                                <input type="text" name="discount" value="<%= product.discount  %>">
                            </div>
                        </div>





                        <div class="field">
                            <div class="control">
                                <button class="boton-de-edit" type="submit">Editar producto</button>
                            </div>
                        </div>
                    </form>
                </section>


            </main>
            <%- include('partials/footer') %>


    </body>

</html>