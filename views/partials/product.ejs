<article class="articulo">
  <a href="/products/<%= product.id %>">
    <img src="/images/<%= product.image %>" width="360" alt="Cafetera" class="product_img">

    <div class="mis-productos">
      <p class="logo"><i class="fas fa-truck"></i></p>
      <div class="precio-con-oferta">
        <p class="precio">$<%= product.price %>
        </p>
        <p class="oferta">
          <%= product.discount %> %off
        </p>
      </div>
    </div>
    <h4 class="descripcion">
      <%= product.name %>
    </h4>
  </a>
</article>